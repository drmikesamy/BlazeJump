@using BlazeJump.Client.Models;

	<div class="box">
		@if (Message.ParentNEvent != null)
		{
			<div class="card box">
				<div class="profile-picture">
					<img src="@($"images/profilepics/{Message.ParentNEvent.User?.ProfilePic ?? ""}.png")" alt="profile picture">
				</div>
				<div class="card-body">
					<h3>
						@(Message.ParentNEvent.Pubkey ?? "")
					</h3>
					<p>@(Message.ParentNEvent.Content ?? "")</p>
					<p>@(Message.ParentNEvent.CreatedAtDateTime)</p>
				</div>
			</div>
		}
		<div class="card box">
			<div class="profile-picture">
				<img src="@($"images/profilepics/{Message.User?.ProfilePic ?? ""}.png")" alt="profile picture">
			</div>
			<div class="card-body">
				<h3>
					@(Message.Pubkey ?? "")
				</h3>
				<p>@(Message.Content ?? "")</p>
				<p>@(Message.CreatedAtDateTime)</p>
			</div>
		</div>
	</div>

@code {
	[Parameter]
	public NEvent Message { get; set; }
}